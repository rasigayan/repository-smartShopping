<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background"
    android:padding="10dip"
    tools:context=".MainActivity"
    >

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtUname"
        android:layout_marginTop="47dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dip"
        android:layout_alignLeft="@+id/txtpw"
        android:layout_alignStart="@+id/txtpw"
        android:textColor="#ffffff"/>

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:ems="10"
        android:id="@+id/txtpw"
        android:layout_marginTop="19dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtUname"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:id="@+id/btnSave"
        android:onClick="saveButtonClicked"
        android:background="@drawable/submit"
        android:layout_marginTop="36dp"
        android:layout_below="@+id/txtmb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtEmail"
        android:layout_marginTop="25dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtpw"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:id="@+id/txtmb"
        android:layout_marginTop="24dp"
        android:textColor="#ffffff"
        android:layout_below="@+id/txtEmail"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Users"
        android:id="@+id/txtUsers"
        android:textColor="#84D24D"
        android:layout_below="@+id/btnLoginwindow"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:id="@+id/btnDelete"
        android:onClick="deleteButtonClicked"
        android:background="@drawable/delete"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/btnSave"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:layout_width="180dp"
        android:layout_height="38dp"
        android:id="@+id/btnLoginwindow"
        android:onClick="logInBtnClicked"
        android:background="@drawable/login2"
        android:layout_marginTop="13dp"
        android:layout_below="@+id/btnDelete"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="User name"
        android:id="@+id/textViewun"
        android:textColor="#84D24D"
        android:layout_alignTop="@+id/txtUname"

        android:layout_marginBottom="8dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Password"
        android:id="@+id/textViewpw"
        android:textColor="#84D24D"
        android:layout_alignTop="@+id/txtpw"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dip"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Email"
        android:id="@+id/textViewemail"
        android:textColor="#84D24D"
        android:layout_alignTop="@+id/txtEmail"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="8dip"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Mobile"
        android:id="@+id/textView"
        android:textColor="#84D24D"
        android:layout_alignTop="@+id/txtmb"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Create Account"
        android:id="@+id/textView7"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#BFFF00"

        android:textStyle="bold" android:textSize="25sp"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/btnsch"
        android:background="@drawable/search"
        android:onClick="btnSchClicked"
        android:layout_above="@+id/btnLoginwindow"
        android:layout_toRightOf="@+id/btnSave"
        android:layout_toEndOf="@+id/btnSave"
        android:layout_marginLeft="49dp"
        android:layout_marginStart="49dp" />

</RelativeLayout>
